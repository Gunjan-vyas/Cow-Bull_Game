#include <time.h>       /* time */
#include<algorithm>
#include<experimental/random>
#include<set>
using namespace std;
bool isNotrepeating (int s[],int n){
	set <int> q;
	for(int i=0;i<n;i++)
	q.insert(s[i]);
	if(q.size()==4)
		return true;
	else
		return false;

}
